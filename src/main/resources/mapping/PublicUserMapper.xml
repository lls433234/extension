<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiuyao.boot.mapper.PublicUserMapper">
  <resultMap id="publicUserMap" type="com.jiuyao.boot.entity.PublicUser">
      <id column="id" jdbcType="INTEGER" property="id" />
      <result column="name" jdbcType="VARCHAR" property="name" />
      <result column="phone" jdbcType="VARCHAR" property="phone" />
      <result column="password" jdbcType="VARCHAR" property="password" />
      <result column="salesman_extension_id" jdbcType="VARCHAR" property="salesmanExtensionId" />
      <result column="status" jdbcType="VARCHAR" property="status" />
      <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>


    <select id="getOneByNameAndPhone" parameterType="java.util.Map" resultMap="publicUserMap">
        select * from public_user where name = #{name,jdbcType=VARCHAR} or phone = #{phone,jdbcType=VARCHAR}
    </select>

    <insert id="save" parameterType="com.jiuyao.boot.entity.PublicUser">
        insert into public_user (name,phone,password,salesman_extension_id,status) values (#{name,jdbcType=VARCHAR},#{phone,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{salesmanExtensionId,jdbcType=VARCHAR},#{status,jdbcType=VARCHAR})
    </insert>

    <select id="getAll" resultMap="publicUserMap">
        select * from public_user
    </select>

    <update id="update" parameterType="java.util.Map">
        update public_user  set status = #{status,jdbcType=VARCHAR} where phone = #{phone,jdbcType=VARCHAR}
    </update>
</mapper>